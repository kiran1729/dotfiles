            shade_end = 1.00
        }
    }
}

style "pager" = "gradient"
{
    xthickness = 1
    ythickness = 1

    bg[SELECTED]      = "#3465a4"
    fg[SELECTED]      = "#ffffff"

    engine "xfce"
    {
        smooth_edge = true
    }
}

