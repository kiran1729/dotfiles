style "scrollbar" = "default"
{
    bg[ACTIVE]        = "#e8e8e8"
    bg[NORMAL]        = "#d3d7cf"
    bg[PRELIGHT]      = "#d3d7cf"

    engine "xfce"
    {
        smooth_edge = true
        grip_style = handle
        boxfill
        {
            fill_style = gradient
            orientation = automatic
            shade_start = 1.10
            shade_end = 1.10
        }
    }
}

